{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": ["src/assets/**/*", "**/*.hbs"],
    "watchAssets": true,
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options":{
          "classValidatorShim": true,
          "introspectComments": true
        }
      }
    ],
    "builder": "swc"
  }
}
